doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js", type='text/javascript').
	body
		div#navigation
			if user
				p Welcome #{user.username}
				a(href="/Logout") Logout
			else
				a(href="/Login") Login
				a(href="/Signup") Signup
		div#content
			h1= title
			block content