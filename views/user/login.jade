extends ../layout

block content
	form(method="post")
		div
			div
				label Login
				input(type="text", name="username", id="loginUsername")
			div
				label Password
				input(type="text", name="password", id="loginPassword")
			div#loginSubmit
				input(type="submit", value="Login")
	if message
		#validationErrors
			p= message