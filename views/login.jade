extends layout

block content
	form(method="post")
		div
			div
				span Login :
				input(type="text", name="username", id="loginUsername")
			div
				span Password :
				input(type="text", name="password", id="loginPassword")
			div#loginSubmit
				input(type="submit", value="Login")
	if message
		#validationErrors
			p= message
	div
		a(href="/Signup") Signup